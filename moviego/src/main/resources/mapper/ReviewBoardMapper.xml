<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.global.moviego.mapper.ReviewBoardMapper">

	<select id="selectReview" resultType="com.global.moviego.domain.ReviewBoardVO">
		SELECT review_id
				,user_id
				,rating
				,title
				,movie_id
				,movie_nm
				,poster_url
				,comment
				,created_at
		  FROM tb_reviews
		  ORDER BY review_id DESC
	</select> 



	<insert id="insert">
		insert into tb_reviews (
			title
			,rating
			,comment
			,created_at
		) values(
			#{title}
			,#{rating}
			,#{comment}
			,now()
		)
	</insert>
	
<!-- 	<select id="selectReviewCnt" resultType="Integer">
		SELECT count(*)
		  FROM tb_reviews
	</select> -->
	
</mapper>